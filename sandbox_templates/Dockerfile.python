FROM python:3.11-slim

WORKDIR /sandbox

RUN apt-get update && apt-get install -y \
    git \
    curl \
    build-essential \
    npm \
    nodejs \
    && rm -rf /var/lib/apt/lists/*

RUN pip install --no-cache-dir \
    pytest==7.4.3 \
    pytest-cov==4.1.0 \
    black==23.12.0 \
    flake8==6.1.0 \
    mypy==1.7.1 \
    requests==2.31.0 \
    numpy==1.26.2 \
    pandas==2.1.3

COPY sandbox_templates/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]
